<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuActivityDrawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/topMenu_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8C000000"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/rotatingWheel_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rotatingWheel_layout2_relative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/rotatingWheel_imageview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/rotatingWheelPin_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/howToPlay_Relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                
                 <LinearLayout
                    android:id="@+id/howToPlay_LinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/howToPlay_imageview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/buyCoins_Relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/buyCoins_Linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                      <ImageView 
                            android:id="@+id/ratingImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                      
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settingsButton_Relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/settingsButton_Linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/settingsButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tablesOption_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <LinearLayout 
             android:id="@+id/tablesOption_emptylayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
                
            </LinearLayout>
            
            <LinearLayout 
             android:id="@+id/tablesOption_layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
                
               <RelativeLayout
                android:id="@+id/publicTable_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/publicTable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/privateTable_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/privateTable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/luxuryTable_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/luxuryTable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
                
            </LinearLayout>
            
            <LinearLayout 
             android:id="@+id/tablesOption_emptylayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
                
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomMenu_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/bottomMenu_emptylayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/bottomMenu_emptylayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottomMenu_emptylayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#8C000000"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/userInfo_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/userImage_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/userImage_layout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/userProfilepic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                </LinearLayout>
                
                
                <LinearLayout
                    android:id="@+id/userImage_userName_emptylayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    
                     <LinearLayout
                    android:id="@+id/userImage_userName_emptylayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                  
                	</LinearLayout>
                	
                         <LinearLayout
                    android:id="@+id/userImage_userName_emptylayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" 
                    android:background="#8C000000">
                  
                	</LinearLayout>
                    
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/userName_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/userName_emptylayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/userName_layout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#8C000000"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/userProfilename"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/other_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/other_layout_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >
                </LinearLayout>
				
                <LinearLayout
                    android:id="@+id/fbw_rating_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#8C000000" >
                    
                    <LinearLayout 
                    android:id="@+id/fbw_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                        
                        
                    <LinearLayout 
                     android:id="@+id/facebook_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                        
                        
                        
                    </LinearLayout>
                    
                      <LinearLayout 
                     android:id="@+id/whatsapp_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                        
                        
                    </LinearLayout>
                        
                    </LinearLayout>
                    
                    <RelativeLayout
                        android:id="@+id/rating_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                      
                        <LinearLayout 
                    android:id="@+id/rating_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                           
                    	 
                           <ImageView 
                            android:id="@+id/whatsappShare_imageview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"/>
               
                        </LinearLayout>
      
                    </RelativeLayout>
                    
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        
        <ListView
            android:id="@+id/drawerList"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@android:color/background_dark" >
        </ListView>

</android.support.v4.widget.DrawerLayout>