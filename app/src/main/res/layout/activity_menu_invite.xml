<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/invitemain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg1" >

    <LinearLayout
        android:id="@+id/invitevertical1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/invitevertical1h1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/invitevertical1h2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/invitevertical1h21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"/> 
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/invitevertical2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/invitevertical2h1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/invitevertical2h2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
             <ImageView
                android:id="@+id/inviteverticalh21"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/> 
       
        </LinearLayout>
         <LinearLayout
            android:id="@+id/invitevertical2h3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
             
         </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/invitevertical3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/invitevertical3h1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/invitevertical3h2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
             <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fb"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/invitevertical3h3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
             <ImageView 
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/whatsapp"
                android:scaleType="fitXY"/>
        </LinearLayout>
         <LinearLayout
            android:id="@+id/invitevertical3h4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>